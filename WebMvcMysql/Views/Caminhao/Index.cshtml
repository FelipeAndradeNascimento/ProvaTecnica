@model IEnumerable<WebMvcMysql.Models.Caminhao>

@{
    ViewData["Title"] = "Index";
}

<h1>Listagem</h1>

<p>
    <a asp-action="Create">Cadastrar Novo Caminhão</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CaminhaoModelo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CaminhaoModelo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CaminhaoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CaminhaoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.CaminhaoId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
